{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://*:5000"
      }
    }
  },
  "SubtitleProcessing": {
    "IgnoredPartsOfSpeech": [
      "記号",
      "助詞",
      "数"
    ],
    "Input": {
      "RootDirectory": "/srv/anime-subs",
      "DirectoryFilter": "analyzed_subs"
    }
  },
  "VideoInput": {
    "RootDirectory": "/mnt/net/media",
    "EngSubsRootDirectory": "/srv/english-subs"
  }
}
